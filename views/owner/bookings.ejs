<%- include('../partials/header') %>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-light">Mes réservations</h2>

    <% if (bookings.length === 0) { %>
        <div class="alert alert-info text-center">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <h5 class="text-light">Aucune réservation trouvée</h5>
            <p>Vos réservations apparaîtront ici une fois que des clients auront réservé vos salles.</p>
        </div>
    <% } else { %>
        <div class="row">
            <% bookings.forEach(function(booking) { %>
                <div class="col-md-6 mb-4">
                    <div class="booking-card card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-start mb-3">
                                <div class="booking-icon me-3">
                                    <i class="fas fa-calendar-check text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1 text-dark"><%= booking.roomName %></h5>
                                    <p class="text-muted mb-0 small">
                                        <i class="fas fa-user me-1"></i><%= booking.clientName %> (<%= booking.clientEmail %>)
                                    </p>
                                </div>
                            </div>
                            <div class="booking-details">
                                <div class="detail-item">
                                    <i class="fas fa-calendar-alt text-info me-2"></i>
                                    <span class="detail-label">Date:</span>
                                    <span class="detail-value"><%= booking.startDate ? new Date(booking.startDate).toLocaleDateString('fr-FR') : 'Date non disponible' %></span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-coins text-success me-2"></i>
                                    <span class="detail-label">Prix:</span>
                                    <span class="detail-value"><%= booking.totalPrice ? parseFloat(booking.totalPrice).toFixed(2) + ' DA' : 'Prix non disponible' %></span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <span class="detail-label">Créée le:</span>
                                    <span class="detail-value"><%= new Date(booking.createdAt).toLocaleDateString('fr-FR') %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <div class="text-center mt-4">
        <a href="/owner/dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>
</div>

<!-- Styles pour les cartes de réservation -->
<style>
.booking-card {
    background: linear-gradient(145deg, #ffffff, #f8f9fa);
    border-radius: 16px;
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
}

.booking-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #007bff, #6610f2);
}

.booking-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.booking-icon {
    background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    color: #007bff;
}

.booking-details {
    margin-top: 1rem;
}

.detail-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.02);
    border-radius: 8px;
    transition: all 0.2s ease;
}

.detail-item:hover {
    background: rgba(0, 123, 255, 0.05);
}

.detail-label {
    font-weight: 600;
    color: #64748B;
    margin-right: 0.5rem;
}

.detail-value {
    color: #7DD3FC;
    font-weight: 500;
}
</style>

<%- include('../partials/footer') %>