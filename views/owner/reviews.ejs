<%- include('../partials/header') %>

<div class="container mt-5">
    <h2 class="text-center mb-4 text-light">Avis sur mes salles</h2>

    <% if (reviews.length === 0) { %>
        <div class="alert alert-info text-center">
            <i class="fas fa-star-half-alt fa-3x text-muted mb-3"></i>
            <h5 class="text-light">Aucun avis trouvé</h5>
            <p>Les avis de vos clients apparaîtront ici une fois qu'ils auront laissé des commentaires.</p>
        </div>
    <% } else { %>
        <div class="row">
            <% reviews.forEach(function(review) { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title"><%= review.roomName %></h5>
                                    <p class="text-muted mb-2"><%= review.clientName %></p>
                                </div>
                                <div class="text-warning">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="<%= i <= review.rating ? 'fas' : 'far' %> fa-star"></i>
                                    <% } %>
                                    <span class="ms-1"><%= review.rating %>/5</span>
                                </div>
                            </div>
                            <p class="card-text"><%= review.comment %></p>
                            <div class="mt-3">
                                <small class="text-muted">Publié le <%= new Date(review.date).toLocaleDateString('fr-FR') %></small>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <div class="text-center mt-4">
        <a href="/owner/dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
        </a>
    </div>
</div>

<%- include('../partials/footer') %>