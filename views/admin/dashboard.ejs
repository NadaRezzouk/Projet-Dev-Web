<script>
function showConfirmModal(action, userId, userName) {
    const overlay = document.getElementById('confirmModalOverlay');
    const icon = document.getElementById('confirmModalIcon');
    const title = document.getElementById('confirmModalTitle');
    const text = document.getElementById('confirmModalText');
    const userNameSpan = document.getElementById('confirmUserName');
    const form = document.getElementById('confirmActionForm');
    const actionBtn = document.getElementById('confirmActionBtn');
    const actionText = document.getElementById('confirmActionText');
    
    userNameSpan.textContent = userName;
    
    if (action === 'deactivate') {
        icon.className = 'confirm-modal-icon deactivate';
        icon.innerHTML = '<i class="fas fa-user-slash"></i>';
        title.textContent = 'Confirmer la désactivation';
        text.innerHTML = 'Êtes-vous sûr de vouloir désactiver le compte de <strong>' + userName + '</strong> ? L\'utilisateur ne pourra plus se connecter.';
        form.action = '/admin/users/' + userId + '/deactivate';
        actionBtn.className = 'btn-confirm-action deactivate';
        actionText.textContent = 'Désactiver';
    } else {
        icon.className = 'confirm-modal-icon activate';
        icon.innerHTML = '<i class="fas fa-user-check"></i>';
        title.textContent = 'Confirmer l\'activation';
        text.innerHTML = 'Êtes-vous sûr de vouloir activer le compte de <strong>' + userName + '</strong> ? L\'utilisateur pourra à nouveau se connecter.';
        form.action = '/admin/users/' + userId + '/activate';
        actionBtn.className = 'btn-confirm-action activate';
        actionText.textContent = 'Activer';
    }
    
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
}

function hideConfirmModal() {
    const overlay = document.getElementById('confirmModalOverlay');
    overlay.classList.remove('active');
    document.body.style.overflow = '';
}

// Fermer la modale en cliquant à l'extérieur
document.getElementById('confirmModalOverlay').addEventListener('click', function(e) {
    if (e.target === this) {
        hideConfirmModal();
    }
});

// Fermer avec la touche Escape
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideConfirmModal();
        hideDeleteRoomModal();
    }
});

// =====================================================
// Fonctions pour la suppression de salles
// =====================================================
function showDeleteRoomModal(roomId, roomName) {
    const overlay = document.getElementById('deleteRoomModalOverlay');
    const roomNameSpan = document.getElementById('deleteRoomName');
    const form = document.getElementById('deleteRoomForm');
    
    roomNameSpan.textContent = roomName;
    form.action = '/admin/rooms/' + roomId + '/delete';
    
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
}

function hideDeleteRoomModal() {
    const overlay = document.getElementById('deleteRoomModalOverlay');
    if (overlay) {
        overlay.classList.remove('active');
        document.body.style.overflow = '';
    }
}

// Fermer la modale de suppression de salle en cliquant à l'extérieur
const deleteRoomOverlay = document.getElementById('deleteRoomModalOverlay');
if (deleteRoomOverlay) {
    deleteRoomOverlay.addEventListener('click', function(e) {
        if (e.target === this) {
            hideDeleteRoomModal();
        }
    });
}

