<%- include('../partials/header') %>

<%
// Déterminer quel élément de la sidebar est actif
const isAllUsers = !filters.type && !filters.status && !filters.search && !filters.view;
const isClients = filters.type === 'client';
const isOwners = filters.type === 'owner';
const isAdmins = filters.type === 'admin';
const isInactive = filters.status === 'inactive';
const isRoomsView = filters.view === 'rooms';
const isReviewsView = filters.view === 'reviews';
%>

<!-- Admin Dashboard -->
<div class="admin-dashboard-wrapper">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <div class="admin-logo">
                <i class="fas fa-shield-alt"></i>
            </div>
            <h3>Admin Panel</h3>
        </div>
        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link <%= isAllUsers ? 'active' : '' %>" href="/admin/dashboard">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= isClients ? 'active' : '' %>" href="/admin/dashboard?type=client">
                        <i class="fas fa-users"></i>
                        <span>Clients</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= isOwners ? 'active' : '' %>" href="/admin/dashboard?type=owner">
                        <i class="fas fa-building"></i>
                        <span>Propriétaires</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= isInactive ? 'active' : '' %>" href="/admin/dashboard?status=inactive">
                        <i class="fas fa-user-slash"></i>
                        <span>Désactivés</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= isRoomsView ? 'active' : '' %>" href="/admin/dashboard?view=rooms">
                        <i class="fas fa-door-open"></i>
                        <span>Salles</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= isReviewsView ? 'active' : '' %>" href="/admin/dashboard?view=reviews">
                        <i class="fas fa-star"></i>
                        <span>Avis & Commentaires</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
        <!-- Dashboard Header -->
        <% if (!isRoomsView && !isReviewsView && !isClients && !isOwners && !isInactive) { %>
        <header class="admin-header">
            <div class="header-content">
                <div class="header-title">
                    <h1>Panneau <span class="gradient-text">Administration</span></h1>
                    <p class="header-subtitle">
                        <% if (filters.view === 'reviews') { %>
                            Modération des avis et commentaires
                        <% } else if (isRoomsView) { %>
                            Gestion des salles
                        <% } else { %>
                            Gestion des comptes utilisateurs
                        <% } %>
                    </p>
                </div>
                <div class="header-actions">
                    <div class="admin-info">
                        <div class="admin-avatar">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <span><%= user.name %></span>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="quick-stats">
                <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard#users-list'">
                    <div class="stat-icon-wrapper purple">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number"><%= stats.totalUsers %></span>
                        <span class="stat-text">Total Utilisateurs</span>
                    </div>
                </div>
                <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard?status=active#users-list'">
                    <div class="stat-icon-wrapper green">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number"><%= stats.activeUsers %></span>
                        <span class="stat-text">Comptes Actifs</span>
                    </div>
                </div>
                <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard?status=inactive#users-list'">
                    <div class="stat-icon-wrapper red">
                        <i class="fas fa-user-slash"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number"><%= stats.inactiveUsers %></span>
                        <span class="stat-text">Désactivés</span>
                    </div>
                </div>
                <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard?type=owner#users-list'">
                    <div class="stat-icon-wrapper gold">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number"><%= stats.totalOwners %></span>
                        <span class="stat-text">Propriétaires</span>
                    </div>
                </div>
                <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard?view=rooms#rooms-list'">
                    <div class="stat-icon-wrapper blue">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number"><%= stats.totalRooms || 0 %></span>
                        <span class="stat-text">Salles</span>
                    </div>
                </div>
               <div class="quick-stat-card clickable" onclick="window.location.href='/admin/dashboard?view=reviews#pending-reviews'">
                    <div class="stat-icon-wrapper gold">
                        <i class="fas fa-star"></i>
                        </div>
                <div class="stat-content">
                    <span class="stat-number"><%= stats.pendingReviews || 0 %></span>
                    <span class="stat-text">Avis en attente</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Messages de succès/erreur -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert-custom alert-success">
                <i class="fas fa-check-circle"></i>
                <span><%= success %></span>
                <button class="alert-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert-custom alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span><%= error %></span>
                <button class="alert-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% } %>

        <!-- Section Filtres (uniquement pour les utilisateurs) -->
        <section class="admin-section <%= isRoomsView ? 'd-none' : '' %>">
            <div class="section-header">
                <div class="section-title">
                    <div class="title-icon">
                        <i class="fas fa-filter"></i>
                    </div>
                    <div>
                        <h2>Filtrer les utilisateurs</h2>
                        <p>Recherchez et filtrez par type ou statut</p>
                    </div>
                </div>
            </div>
            <div class="filter-card">
                <form action="/admin/dashboard" method="GET" class="filter-form">
                    <div class="filter-group">
                        <label><i class="fas fa-search"></i> Rechercher</label>
                        <input type="text" name="search" class="filter-input" 
                               value="<%= typeof filters !== 'undefined' && filters.search ? filters.search : '' %>" 
                               placeholder="Nom ou email...">
                    </div>
                    <div class="filter-group">
                        <label><i class="fas fa-user-tag"></i> Type</label>
                        <select name="type" class="filter-select">
                            <option value="">Tous les types</option>
                            <option value="client" <%= typeof filters !== 'undefined' && filters.type === 'client' ? 'selected' : '' %>>Client</option>
                            <option value="owner" <%= typeof filters !== 'undefined' && filters.type === 'owner' ? 'selected' : '' %>>Propriétaire</option>
                            <option value="admin" <%= typeof filters !== 'undefined' && filters.type === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label><i class="fas fa-toggle-on"></i> Statut</label>
                        <select name="status" class="filter-select">
                            <option value="">Tous les statuts</option>
                            <option value="active" <%= typeof filters !== 'undefined' && filters.status === 'active' ? 'selected' : '' %>>Actif</option>
                            <option value="inactive" <%= typeof filters !== 'undefined' && filters.status === 'inactive' ? 'selected' : '' %>>Désactivé</option>
                        </select>
                    </div>
                    <div class="filter-actions">
                        <button type="submit" class="btn-filter">
                            <i class="fas fa-search"></i> Filtrer
                        </button>
                        <a href="/admin/dashboard" class="btn-reset">
                            <i class="fas fa-redo"></i> Réinitialiser
                        </a>
                    </div>
                </form>
            </div>
        </section>
        <% } %>

        <!-- Section Liste des utilisateurs -->
        <section id="users-list" class="admin-section <%= isRoomsView || isReviewsView ? 'd-none' : '' %>">
            <div class="section-header">
                <div class="section-title">
                    <div class="title-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <h2>Liste des utilisateurs</h2>
                        <p><%= users.length %> utilisateur(s) trouvé(s)</p>
                    </div>
                </div>
            </div>

            <% if (users.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <h3>Aucun utilisateur trouvé</h3>
                    <p>Modifiez vos filtres pour voir plus de résultats</p>
                </div>
            <% } else { %>
                <div class="users-grid">
                    <% users.forEach(function(u) { %>
                        <div class="user-card <%= !u.isActive ? 'inactive' : '' %>">
                            <div class="user-card-header">
                                <div class="user-avatar <%= u.isActive ? 'active' : 'inactive' %>">
                                    <span><%= u.name.charAt(0).toUpperCase() %></span>
                                </div>
                                <div class="user-status">
                                    <% if (u.isActive) { %>
                                        <span class="status-badge active">
                                            <i class="fas fa-check-circle"></i> Actif
                                        </span>
                                    <% } else { %>
                                        <span class="status-badge inactive">
                                            <i class="fas fa-ban"></i> Désactivé
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="user-card-body">
                                <h4 class="user-name"><%= u.name %></h4>
                                <p class="user-email"><i class="fas fa-envelope"></i> <%= u.email %></p>
                                <% if (u.phone) { %>
                                    <p class="user-phone"><i class="fas fa-phone"></i> <%= u.phone %></p>
                                <% } %>
                                
                                <div class="user-type">
                                    <% if (u.type === 'admin') { %>
                                        <span class="type-badge admin">
                                            <i class="fas fa-shield-alt"></i> Administrateur
                                        </span>
                                    <% } else if (u.type === 'owner') { %>
                                        <span class="type-badge owner">
                                            <i class="fas fa-building"></i> Propriétaire
                                        </span>
                                    <% } else { %>
                                        <span class="type-badge client">
                                            <i class="fas fa-user"></i> Client
                                        </span>
                                    <% } %>
                                </div>
                                
                                <div class="user-date">
                                    <i class="fas fa-calendar-alt"></i>
                                    Inscrit le <%= new Date(u.createdAt).toLocaleDateString('fr-FR', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                </div>
                            </div>
                            
                            <div class="user-card-footer">
                                <% if (u.id !== user.id) { %>
                                    <% if (u.isActive) { %>
                                        <button type="button" class="btn-action deactivate" 
                                                onclick="showConfirmModal('deactivate', '<%= u.id %>', '<%= u.name %>')">
                                            <i class="fas fa-user-slash"></i> Désactiver
                                        </button>
                                    <% } else { %>
                                        <button type="button" class="btn-action activate"
                                                onclick="showConfirmModal('activate', '<%= u.id %>', '<%= u.name %>')">
                                            <i class="fas fa-user-check"></i> Activer
                                        </button>
                                    <% } %>
                                    <button type="button" class="btn-action view" 
                                            data-bs-toggle="modal" data-bs-target="#userModal<%= u.id %>">
                                        <i class="fas fa-eye"></i> Détails
                                    </button>
                                <% } else { %>
                                    <div class="current-user-badge">
                                        <i class="fas fa-user-circle"></i> Votre compte
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Modal pour les détails utilisateur -->
                        <div class="modal fade" id="userModal<%= u.id %>" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content admin-modal">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            <i class="fas fa-user-circle"></i> Détails de l'utilisateur
                                        </h5>
                                        <button type="button" class="modal-close" data-bs-dismiss="modal">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="modal-user-header">
                                            <div class="modal-avatar <%= u.isActive ? 'active' : 'inactive' %>">
                                                <span><%= u.name.charAt(0).toUpperCase() %></span>
                                            </div>
                                            <h4><%= u.name %></h4>
                                            <% if (u.isActive) { %>
                                                <span class="status-badge active"><i class="fas fa-check-circle"></i> Actif</span>
                                            <% } else { %>
                                                <span class="status-badge inactive"><i class="fas fa-ban"></i> Désactivé</span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="modal-info-list">
                                            <div class="info-item">
                                                <i class="fas fa-envelope"></i>
                                                <div>
                                                    <label>Email</label>
                                                    <span><%= u.email %></span>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <i class="fas fa-phone"></i>
                                                <div>
                                                    <label>Téléphone</label>
                                                    <span><%= u.phone || 'Non renseigné' %></span>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <i class="fas fa-user-tag"></i>
                                                <div>
                                                    <label>Type de compte</label>
                                                    <span class="text-capitalize"><%= u.type %></span>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <i class="fas fa-calendar"></i>
                                                <div>
                                                    <label>Date d'inscription</label>
                                                    <span><%= new Date(u.createdAt).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                                </div>
                                            </div>
                                            <div class="info-item">
                                                <i class="fas fa-clock"></i>
                                                <div>
                                                    <label>Dernière mise à jour</label>
                                                    <span><%= new Date(u.updatedAt).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">
                                            Fermer
                                        </button>
                                        <% if (u.id !== user.id) { %>
                                            <% if (u.isActive) { %>
                                                <button type="button" class="btn-modal-danger" 
                                                        data-bs-dismiss="modal"
                                                        onclick="setTimeout(() => showConfirmModal('deactivate', '<%= u.id %>', '<%= u.name %>'), 300)">
                                                    <i class="fas fa-user-slash"></i> Désactiver
                                                </button>
                                            <% } else { %>
                                                <button type="button" class="btn-modal-success"
                                                        data-bs-dismiss="modal"
                                                        onclick="setTimeout(() => showConfirmModal('activate', '<%= u.id %>', '<%= u.name %>'), 300)">
                                                    <i class="fas fa-user-check"></i> Activer
                                                </button>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </section>

        <!-- Section Liste des salles -->
        <section id="rooms-list" class="admin-section <%= !isRoomsView ? 'd-none' : '' %>">
            <div class="section-header">
                <div class="section-title">
                    <div class="title-icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div>
                        <h2>Gestion des Salles</h2>
                        <p><%= typeof rooms !== 'undefined' ? rooms.length : 0 %> salle(s) au total</p>
                    </div>
                </div>
            </div>

            <% if (typeof rooms === 'undefined' || rooms.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-door-closed"></i>
                    </div>
                    <h3>Aucune salle enregistrée</h3>
                    <p>Les propriétaires n'ont pas encore ajouté de salles</p>
                </div>
            <% } else { %>
                <div class="rooms-admin-grid">
                    <% rooms.forEach(function(room) { %>
                        <div class="room-admin-card">
                            <div class="room-admin-image">
                                <img src="<%= room.image || '/images/default-room.jpg' %>" alt="<%= room.name %>">
                                <div class="room-admin-overlay">
                                    <span class="room-price"><%= room.price %> DA/jour</span>
                                </div>
                            </div>
                            <div class="room-admin-body">
                                <h4 class="room-admin-name"><%= room.name %></h4>
                                <div class="room-admin-info">
                                    <span><i class="fas fa-map-marker-alt"></i> <%= room.wilaya || 'Non spécifié' %></span>
                                    <span><i class="fas fa-users"></i> <%= room.capacity %> pers.</span>
                                </div>
                                <div class="room-admin-owner">
                                    <i class="fas fa-user"></i> 
                                    <span>Propriétaire ID: <%= room.ownerId || 'N/A' %></span>
                                </div>
                                <div class="room-admin-date">
                                    <i class="fas fa-calendar-plus"></i>
                                    Créée le <%= new Date(room.createdAt).toLocaleDateString('fr-FR', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                </div>
                            </div>
                            <div class="room-admin-footer">
                                <a href="/rooms/<%= room.id %>" class="btn-room-view" target="_blank">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <button type="button" class="btn-room-delete" 
                                        onclick="showDeleteRoomModal('<%= room.id %>', '<%= room.name.replace(/'/g, "\\'") %>')">
                                    <i class="fas fa-trash-alt"></i> Supprimer
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </section>

        <!-- Section Liste des avis pour modération -->
        <section id="reviews-list" class="admin-section <%= filters.view !== 'reviews' ? 'd-none' : '' %>">
            <% if (!isReviewsView) { %>
            <div class="section-header">
                <div class="section-title">
                    <div class="title-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div>
                        <h2>Modération des Avis</h2>
                        <p><%= typeof reviews !== 'undefined' ? reviews.length : 0 %> avis au total • <%= typeof stats !== 'undefined' && stats.pendingReviews ? stats.pendingReviews : 0 %> en attente</p>
                    </div>
                </div>
            </div>
            <% } %>

            <% if (typeof reviews === 'undefined' || reviews.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3>Aucun avis</h3>
                    <p>Les clients n'ont pas encore laissé d'avis</p>
                </div>
            <% } else { %>
                <div class="reviews-admin-grid">
                    <% reviews.forEach(function(review) { %>
                        <div class="review-admin-card <%= review.isApproved ? 'approved' : 'pending' %>">
                            <div class="review-admin-header">
                                <div class="review-admin-user">
                                    <div class="review-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <h4><%= review.userName || 'Utilisateur anonyme' %></h4>
                                        <span class="review-date"><%= new Date(review.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></span>
                                    </div>
                                </div>
                                <div class="review-admin-status">
                                    <% if (review.isApproved) { %>
                                        <span class="status-badge approved">
                                            <i class="fas fa-check"></i> Approuvé
                                        </span>
                                    <% } else { %>
                                        <span class="status-badge pending">
                                            <i class="fas fa-clock"></i> En attente
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="review-admin-body">
                                <div class="review-rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= review.rating ? 'active' : '' %>"></i>
                                    <% } %>
                                    <span class="rating-text"><%= review.rating %>/5</span>
                                </div>
                                <div class="review-room">
                                    <i class="fas fa-door-open"></i>
                                    <span><%= review.roomName || 'Salle inconnue' %></span>
                                </div>
                                <div class="review-comment">
                                    <p><%= review.comment %></p>
                                </div>
                            </div>
                            <% if (!review.isApproved) { %>
                                <div class="review-admin-footer">
                                    <form action="/admin/reviews/<%= review.id %>/approve" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-review-approve">
                                            <i class="fas fa-check"></i> Approuver
                                        </button>
                                    </form>
                                    <form action="/admin/reviews/<%= review.id %>/reject" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-review-reject" onclick="return confirm('Êtes-vous sûr de vouloir rejeter cet avis ?')">
                                            <i class="fas fa-times"></i> Rejeter
                                        </button>
                                    </form>
                                </div>
                            <% } else { %>
                                <div class="review-admin-footer">
                                    <button type="button" class="btn-review-delete" 
                                            onclick="showDeleteReviewModal('<%= review.id %>', '<%= review.userName || 'Utilisateur anonyme' %>')">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </section>
    </main>
</div>

<style>
/* =====================================================
   ADMIN DASHBOARD STYLES - Thème Sombre Premium
   ===================================================== */

/* Variables */
:root {
    --admin-primary: #8b5cf6;
    --admin-primary-dark: #7c3aed;
    --admin-success: #10b981;
    --admin-danger: #ef4444;
    --admin-warning: #f59e0b;
    --admin-info: #3b82f6;
    --admin-dark: #0f172a;
    --admin-card: #1e293b;
    --admin-border: rgba(255, 255, 255, 0.1);
    --admin-text: #e2e8f0;
    --admin-text-muted: #94a3b8;
}

/* Layout Principal */
.admin-dashboard-wrapper {
    display: flex;
    min-height: calc(100vh - 80px);
    background: linear-gradient(180deg, #0f172a 0%, #1a1f35 50%, #0f172a 100%);
    position: relative;
}

/* Sidebar */
.admin-sidebar {
    width: 260px;
    background: rgba(30, 41, 59, 0.95);
    backdrop-filter: blur(10px);
    border-right: 1px solid var(--admin-border);
    padding: 1.5rem;
    position: sticky;
    top: 0;
    height: 100vh;
    min-height: 100vh;
    max-height: 100vh;
    overflow-y: auto;
    z-index: 100;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
}

.sidebar-header {
    text-align: center;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--admin-border);
    margin-bottom: 1.5rem;
}

.admin-logo {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.3);
}

.admin-logo i {
    font-size: 1.75rem;
    color: white;
}

.sidebar-header h3 {
    color: var(--admin-text);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
}

.sidebar-nav .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.sidebar-nav .nav-item {
    margin-bottom: 0.5rem;
}

.sidebar-nav .nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border-radius: 10px;
    color: var(--admin-text-muted);
    text-decoration: none;
    transition: all 0.3s ease;
}

.sidebar-nav .nav-link:hover,
.sidebar-nav .nav-link.active {
    background: rgba(139, 92, 246, 0.15);
    color: var(--admin-primary);
}

.sidebar-nav .nav-link i {
    font-size: 1.1rem;
    width: 24px;
}

/* Main Content */
.admin-main {
    flex: 1;
    padding: 2rem;
    overflow-x: hidden;
    min-width: 0;
}

/* Header */
.admin-header {
    margin-bottom: 2rem;
}

.admin-header .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
}

.admin-header .header-title h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--admin-text);
    margin-bottom: 0.5rem;
}

.admin-header .gradient-text {
    background: linear-gradient(135deg, var(--admin-primary), #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.admin-header .header-subtitle {
    color: var(--admin-text-muted);
    font-size: 1rem;
}

.admin-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: rgba(30, 41, 59, 0.8);
    border-radius: 50px;
    border: 1px solid var(--admin-border);
}

.admin-avatar {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.admin-avatar i {
    color: white;
    font-size: 1rem;
}

.admin-info span {
    color: var(--admin-text);
    font-weight: 500;
}

/* Quick Stats */
.quick-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
}

.quick-stat-card {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid var(--admin-border);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
}

.quick-stat-card.clickable {
    cursor: pointer;
    transition: all 0.3s ease;
}

.quick-stat-card.clickable:hover {
    transform: translateY(-5px) scale(1.02);
    border-color: rgba(139, 92, 246, 0.4);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(139, 92, 246, 0.2);
}

.stat-icon-wrapper {
    width: 56px;
    height: 56px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

.stat-icon-wrapper.purple {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
    color: white;
}

.stat-icon-wrapper.green {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
}

.stat-icon-wrapper.red {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: white;
}

.stat-icon-wrapper.gold {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
}

.stat-content {
    display: flex;
    flex-direction: column;
}

.stat-number {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--admin-text);
    line-height: 1;
}

.stat-text {
    color: var(--admin-text-muted);
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

/* Alerts */
.alert-custom {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    animation: slideIn 0.3s ease;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.alert-custom.alert-success {
    background: rgba(16, 185, 129, 0.15);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #10b981;
}

.alert-custom.alert-error {
    background: rgba(239, 68, 68, 0.15);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.alert-custom i {
    font-size: 1.25rem;
}

.alert-custom span {
    flex: 1;
}

.alert-close {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0.25rem;
    opacity: 0.7;
    transition: opacity 0.2s;
}

.alert-close:hover {
    opacity: 1;
}

/* Sections */
.admin-section {
    margin-bottom: 2rem;
}

.section-header {
    margin-bottom: 1.5rem;
}

.section-title {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.title-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
}

.section-title h2 {
    color: var(--admin-text);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
}

.section-title p {
    color: var(--admin-text-muted);
    font-size: 0.875rem;
    margin: 0.25rem 0 0;
}

/* Filter Card */
.filter-card {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid var(--admin-border);
    border-radius: 16px;
    padding: 1.5rem;
}

.filter-form {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr auto;
    gap: 1.5rem;
    align-items: flex-end;
}

.filter-group {
    width: 100%;
}

.filter-group label {
    display: block;
    color: var(--admin-text-muted);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
}

.filter-group label i {
    margin-right: 0.5rem;
}

.filter-input,
.filter-select {
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid var(--admin-border);
    border-radius: 10px;
    color: var(--admin-text);
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.filter-input:focus,
.filter-select:focus {
    outline: none;
    border-color: var(--admin-primary);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
}

.filter-input::placeholder {
    color: var(--admin-text-muted);
}

.filter-select option {
    background: var(--admin-dark);
}

.filter-actions {
    display: flex;
    gap: 0.75rem;
    align-items: flex-end;
    padding-bottom: 0;
}

.btn-filter,
.btn-reset {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    white-space: nowrap;
    height: 46px;
}

.btn-filter {
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
    border: none;
    color: white;
}

.btn-filter:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(139, 92, 246, 0.4);
}

.btn-reset {
    background: transparent;
    border: 1px solid var(--admin-border);
    color: var(--admin-text-muted);
}

.btn-reset:hover {
    border-color: var(--admin-primary);
    color: var(--admin-primary);
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(30, 41, 59, 0.5);
    border-radius: 16px;
    border: 1px dashed var(--admin-border);
}

.empty-icon {
    width: 80px;
    height: 80px;
    background: rgba(139, 92, 246, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.empty-icon i {
    font-size: 2.5rem;
    color: var(--admin-primary);
}

.empty-state h3 {
    color: var(--admin-text);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
}

.empty-state p {
    color: var(--admin-text-muted);
}

/* Users Grid */
.users-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
}

/* User Card */
.user-card {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid var(--admin-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
}

.user-card:hover {
    transform: translateY(-5px);
    border-color: rgba(139, 92, 246, 0.3);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.user-card.inactive {
    opacity: 0.7;
}

.user-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: rgba(15, 23, 42, 0.5);
    border-bottom: 1px solid var(--admin-border);
}

.user-avatar {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
}

.user-avatar.active {
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
}

.user-avatar.inactive {
    background: linear-gradient(135deg, #475569, #334155);
}

.status-badge {
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.375rem;
}

.status-badge.active {
    background: rgba(16, 185, 129, 0.15);
    color: #10b981;
}

.status-badge.inactive {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
}

.user-card-body {
    padding: 1.25rem;
}

.user-name {
    color: var(--admin-text);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
}

.user-email,
.user-phone {
    color: var(--admin-text-muted);
    font-size: 0.875rem;
    margin: 0.375rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.user-email i,
.user-phone i {
    width: 16px;
    color: var(--admin-primary);
}

.user-type {
    margin: 1rem 0;
}

.type-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 500;
}

.type-badge.admin {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
}

.type-badge.owner {
    background: rgba(245, 158, 11, 0.15);
    color: #f59e0b;
}

.type-badge.client {
    background: rgba(59, 130, 246, 0.15);
    color: #3b82f6;
}

.user-date {
    color: var(--admin-text-muted);
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--admin-border);
}

.user-card-footer {
    display: flex;
    gap: 0.75rem;
    padding: 1.25rem;
    background: rgba(15, 23, 42, 0.3);
    border-top: 1px solid var(--admin-border);
}

.action-form {
    flex: 1;
}

.btn-action {
    width: 100%;
    padding: 0.625rem 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
}

.btn-action.activate {
    background: rgba(16, 185, 129, 0.15);
    color: #10b981;
}

.btn-action.activate:hover {
    background: #10b981;
    color: white;
}

.btn-action.deactivate {
    background: rgba(239, 68, 68, 0.15);
    color: #ef4444;
}

.btn-action.deactivate:hover {
    background: #ef4444;
    color: white;
}

.btn-action.view {
    background: rgba(139, 92, 246, 0.15);
    color: var(--admin-primary);
    flex: 1;
}

.btn-action.view:hover {
    background: var(--admin-primary);
    color: white;
}

.current-user-badge {
    width: 100%;
    text-align: center;
    padding: 0.625rem;
    background: rgba(139, 92, 246, 0.1);
    border-radius: 8px;
    color: var(--admin-primary);
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

/* Modal Styles */
.admin-modal {
    background: var(--admin-card) !important;
    border: 1px solid var(--admin-border) !important;
    border-radius: 20px !important;
}

.admin-modal .modal-header {
    background: rgba(15, 23, 42, 0.5);
    border-bottom: 1px solid var(--admin-border);
    padding: 1.25rem 1.5rem;
}

.admin-modal .modal-title {
    color: var(--admin-text);
    font-size: 1.125rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.admin-modal .modal-title i {
    color: var(--admin-primary);
}

.modal-close {
    background: none;
    border: none;
    color: var(--admin-text-muted);
    font-size: 1.25rem;
    cursor: pointer;
    transition: color 0.2s;
}

.modal-close:hover {
    color: var(--admin-text);
}

.admin-modal .modal-body {
    padding: 1.5rem;
}

.modal-user-header {
    text-align: center;
    margin-bottom: 1.5rem;
}

.modal-avatar {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 600;
    color: white;
    margin: 0 auto 1rem;
}

.modal-avatar.active {
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
}

.modal-avatar.inactive {
    background: linear-gradient(135deg, #475569, #334155);
}

.modal-user-header h4 {
    color: var(--admin-text);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
}

.modal-info-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.info-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem;
    background: rgba(15, 23, 42, 0.5);
    border-radius: 10px;
}

.info-item > i {
    width: 40px;
    height: 40px;
    background: rgba(139, 92, 246, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--admin-primary);
}

.info-item div {
    flex: 1;
}

.info-item label {
    display: block;
    color: var(--admin-text-muted);
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
}

.info-item span {
    color: var(--admin-text);
    font-size: 0.95rem;
}

.admin-modal .modal-footer {
    background: rgba(15, 23, 42, 0.5);
    border-top: 1px solid var(--admin-border);
    padding: 1rem 1.5rem;
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
}

.btn-modal-secondary,
.btn-modal-success,
.btn-modal-danger {
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border: none;
}

.btn-modal-secondary {
    background: rgba(148, 163, 184, 0.15);
    color: var(--admin-text-muted);
}

.btn-modal-secondary:hover {
    background: rgba(148, 163, 184, 0.25);
    color: var(--admin-text);
}

.btn-modal-success {
    background: #10b981;
    color: white;
}

.btn-modal-success:hover {
    background: #059669;
}

.btn-modal-danger {
    background: #ef4444;
    color: white;
}

.btn-modal-danger:hover {
    background: #dc2626;
}

/* Responsive */
@media (max-width: 1200px) {
    .quick-stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .filter-form {
        grid-template-columns: 1fr 1fr;
    }
    
    .filter-actions {
        grid-column: span 2;
        justify-content: flex-start;
    }
}

@media (max-width: 992px) {
    .admin-sidebar {
        width: 80px;
        padding: 1rem 0.5rem;
    }
    
    .sidebar-header h3,
    .sidebar-nav .nav-link span {
        display: none;
    }
    
    .admin-logo {
        width: 48px;
        height: 48px;
        border-radius: 12px;
    }
    
    .admin-logo i {
        font-size: 1.25rem;
    }
    
    .sidebar-nav .nav-link {
        justify-content: center;
        padding: 0.875rem;
    }
}

@media (max-width: 768px) {
    .admin-sidebar {
        display: none;
    }
    
    .admin-main {
        padding: 1rem;
    }
    
    .admin-header .header-content {
        flex-direction: column;
        gap: 1rem;
    }
    
    .quick-stats {
        grid-template-columns: 1fr;
    }
    
    .filter-form {
        grid-template-columns: 1fr;
    }
    
    .filter-group {
        width: 100%;
    }
    
    .filter-actions {
        grid-column: span 1;
        width: 100%;
        flex-direction: row;
    }
    
    .filter-actions .btn-filter,
    .filter-actions .btn-reset {
        flex: 1;
    }
    
    .users-grid {
        grid-template-columns: 1fr;
    }
    
    .user-card-footer {
        flex-direction: column;
    }
    
    .rooms-admin-grid {
        grid-template-columns: 1fr;
    }
}

/* Styles pour la navigation divider */
.nav-item.nav-divider {
    padding: 1rem 1rem 0.5rem;
    margin-top: 0.5rem;
    border-top: 1px solid var(--admin-border);
}

.nav-item.nav-divider span {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--admin-text-muted);
    font-weight: 600;
}

/* Styles pour le stat icon blue */
.stat-icon-wrapper.blue {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: white;
}

/* D-none utility */
.d-none {
    display: none !important;
}

/* =====================================================
   ROOM ADMIN CARDS STYLES
   ===================================================== */
.rooms-admin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
}

.room-admin-card {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid var(--admin-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
}

.room-admin-card:hover {
    transform: translateY(-5px);
    border-color: rgba(139, 92, 246, 0.3);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.room-admin-image {
    position: relative;
    height: 180px;
    overflow: hidden;
}

.room-admin-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.room-admin-card:hover .room-admin-image img {
    transform: scale(1.05);
}

.room-admin-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    display: flex;
    align-items: flex-end;
    padding: 1rem;
}

.room-price {
    background: linear-gradient(135deg, var(--admin-primary), var(--admin-primary-dark));
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
}

.room-admin-body {
    padding: 1.25rem;
}

.room-admin-name {
    color: var(--admin-text);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.75rem;
}

.room-admin-info {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.75rem;
}

.room-admin-info span {
    color: var(--admin-text-muted);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
}

.room-admin-info i {
